<div class="row">
	<div class=" span1 text-center well">
		<%= link_to vote_post_path(post,type: true),method: "post" do%>
		<i class="icon-arrow-up"></i>
		<% end %>
		<p><%= post.total %></p>
		<%= link_to vote_post_path(post,type: false),method: "post" do%>
		<i class="icon-arrow-down"></i>
		<% end %>
	</div>
	<div class="span8 well">
		<%= render post.categories %>
		<h4><%= link_to post.title, fix_url(post.url) %></h4>[<%= link_to "edit", edit_post_path(post)%>]
		<p><%= post.description%></p>
		<p>
			<span class="quiet">Posted by: </span><%= link_to post.user.username, user_path(post.user)%>
		</p>
		<span>
			<%= link_to "#{post.comments.size} comments", post_path(post)%>
		</span>
	</div>
</div>